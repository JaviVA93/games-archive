---
export interface Props {
    name: string;
    imageUrl: string;
    slug: string;
}

const { name, imageUrl, slug } = Astro.props;
---

<a href={`/games/${slug}`} class="gameCard">
    <div class="imageCover">
        <img src={imageUrl} alt=`${name} image` style=`view-transition-name: game-${slug}` />
    </div>
    <h2>{name}</h2>
</a>

<style is:inline>
    .gameCard {
        display: flex;
        position: relative;
        width: 100%;
        aspect-ratio: 960/540;
        text-decoration: none;
        border-radius: 8px;
        overflow: hidden;

        transition: all 0.25s;
    }

    .gameCard:hover {
        transform: translate(-2px, -2px);
        box-shadow: 4px 4px 10px var(--color-5);
    }

    .imageCover {
        position: absolute;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            180deg,
            rgba(0, 0, 0, 0) 0%,
            rgba(0, 0, 0, 0.4) 70%,
            rgba(0, 0, 0, 0.8) 100%
        );
    }

    .gameCard img {
        position: absolute;
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        z-index: -1;
    }
    .gameCard h2 {
        font-size: 22px;
        margin: auto 10px 12px;
        color: white;
        z-index: 1;
    }
</style>
